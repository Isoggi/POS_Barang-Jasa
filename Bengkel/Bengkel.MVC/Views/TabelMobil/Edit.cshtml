<script type="text/javascript">
    $(".btn-edit-conf").click(function () {
        var item = {
            Id: $("#Id").val(),
            KodeMobil: $("#KodeMobil").val(),
            JenisMobil: $("#JenisMobil").val(),
            MerekMobil: $("#MerekMobil").val(),
            NamaMobil: $("#NamaMobil").val(),
            TahunMobil: $("#TahunMobil").val(),
            IsActived: $("#IsActived").is(":checked")
        };
        //alert(JSON.stringify(item));
        $.ajax({
            url: '@Url.Action("Edit", "TabelMobil")',
            type: 'post',
            data: { model: item },
            success: function (result) {
                if (result.success) {
                    $("#modal-form").modal("hide");
                    ShowList();
                } else {
                    alert('Error : ' + result.message);
                }
            }
        });
    });
</script>