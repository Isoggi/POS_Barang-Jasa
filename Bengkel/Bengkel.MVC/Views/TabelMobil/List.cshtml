<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KodeMobil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JenisMobil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MerekMobil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaMobil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TahunMobil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActived)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Created_By)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modified_By)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modified)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KodeMobil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JenisMobil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MerekMobil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaMobil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TahunMobil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActived)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Created_By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modified_By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modified)
        </td>*@
        <td>
            <input type="button" value="Edit" class="btn btn-warning btn-edit" data-id="@item.Id" />
            <input type="button" value="Delete" class="btn btn-danger btn-delete" data-id="@item.Id" />
        </td>
    </tr>
}

</table>
<script type="text/javascript">
    $(".btn-edit").click(function () {
        //alert('Idnya adalah : ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Edit", "TabelMobil")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });

    $(".btn-delete").click(function () {
        //alert('Idnya adalah : ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Delete", "TabelMobil")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });
</script>